<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/teal_200"
        android:gravity="center"
        android:text="@string/app_name" />

    <!--android:foreground="?android:attr/selectableItemBackground"-->
    <!--style="@android:style/Widget.Button"-->
    <TextView

        android:id="@+id/create_button"
        style="@style/ButtonStyle"
        android:background="@drawable/button_ripple"
        android:text="@string/create_new_graph"
        app:drawableLeftCompat="@drawable/ic_add_24"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/load_button"
        style="@style/ButtonStyle"
        android:background="@drawable/button_ripple"
        android:gravity="center"
        android:text="Load from file"
        app:drawableLeftCompat="@drawable/ic_download_24" />

    <TextView
        android:id="@+id/customize_button"
        style="@style/ButtonStyle"
        android:background="@drawable/button_ripple"
        android:gravity="center"
        android:text="Choose custom theme" />


    <!--    instructions?-->
    <TextView
        android:id="@+id/help_button"
        style="@style/ButtonStyle"
        android:background="@drawable/button_ripple"
        android:drawableLeft="@drawable/ic_help_24"
        android:gravity="center"
        android:text="Help" />

</androidx.appcompat.widget.LinearLayoutCompat>